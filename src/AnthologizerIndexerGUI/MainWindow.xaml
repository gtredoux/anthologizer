<Window x:Class="AnthologizerIndexerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anthologizer Indexer" Height="227.2" Width="623.2" Icon="butterfly.ico">
    <DockPanel  HorizontalAlignment="Stretch" LastChildFill="True"  VerticalAlignment="Stretch">
        <DockPanel DockPanel.Dock="Top">
            <Button Name="ExitButton" Padding="3" Margin="4"  Content="Exit" HorizontalAlignment="Left" DockPanel.Dock="Left"  Click="ExitButton_Click" />
            <Button Name="IndexButton" Padding="3" Content="Index" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="4" Click="IndexButton_Click" />
            <Button Name="StopButton"  Padding="3" Content="Stop"  HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="4" Click="StopButton_Click" />
        </DockPanel>
        <ListBox Name="LogListBox" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" />
    </DockPanel>
</Window>
